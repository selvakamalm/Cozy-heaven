@model HotelViewModel

<div class="container mt-4">
    <h2>🏨 View Hotel</h2>

    <table class="table table-bordered">
        <tr><th>ID</th><td>@Model.Id</td></tr>
        <tr><th>Name</th><td>@Model.Name</td></tr>
        <tr><th>Location</th><td>@Model.Location</td></tr>
        <tr><th>Description</th><td>@Model.Description</td></tr>
        <tr><th>Owner ID</th><td>@Model.OwnerId</td></tr>
    </table>

    <a href="@Url.Action("Hotels", "Admin")" class="btn btn-secondary">⬅ Back</a>
</div>

