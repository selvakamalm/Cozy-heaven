@model HotelViewModel
@{
    ViewData["Title"] = "Edit Hotel";
}

<div class="container mt-4">
    <h2>Edit Hotel</h2>

    <form asp-action="EditHotel" method="post">
        @Html.HiddenFor(m => m.Id)

        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Location" class="form-label"></label>
            <input asp-for="Location" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>

        <div class="mb-3">
            <label asp-for="OwnerId" class="form-label"></label>
            <input asp-for="OwnerId" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary">Update</button>
        <a href="@Url.Action("Hotels", "Admin")" class="btn btn-secondary">Cancel</a>
    </form>
</div>
